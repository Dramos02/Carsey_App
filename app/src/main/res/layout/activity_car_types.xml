<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartypebg"
    android:backgroundTint="#8000BFA5"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".CarTypes">

    <androidx.cardview.widget.CardView
        android:id="@+id/carTypesView"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mainMenuBtn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Buy"
                android:contextClickable="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/car" />

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ggastino"
                android:gravity="center"
                android:text="@string/appTitle"
                android:textColor="#64DD17"
                android:textSize="34sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>